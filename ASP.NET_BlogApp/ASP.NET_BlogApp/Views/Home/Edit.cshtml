@model ASP.NET_BlogApp.Models.Post

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="postContainer">
    <div class="postTitle">Edit</div>
    @using (Html.BeginForm("UpdatePosts", "Home", FormMethod.Post, new { @id = "postForm", @class = "jumbotron" }))
    {
        if (Model.Id != -1)
        {
            <input type="hidden" name="id" value="@Model.Id" />
        }

        DateTime date = Model.Date.Year > 2000 ? Model.Date : DateTime.Now;

        <label class="col-md-2">Date</label><input class="form-control" type="text" name="date" value="@date" /><br />
        <label class="col-md-2">Title</label><input class="form-control" type="text" name="title" value="@Model.Title" /><br />
        <label class="col-md-2">Tags</label><input class="form-control" type="text" name="tags" value="@ViewBag.Tags" /><br />
        <label class="col-md-2">Post</label><textarea class="form-control" name="body" rows="10" cols="80">@Model.Body</textarea><br />
        <label class="col-md-2"></label><input class="btn btn-default" type="submit" name="submit" value="Submit" />
    }
    
</div>

