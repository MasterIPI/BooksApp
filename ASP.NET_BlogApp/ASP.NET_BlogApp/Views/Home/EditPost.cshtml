@model ViewModels.EditHomeViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section title
{
    Edit post
}
<div class="postTitle">Edit</div>
<div class="postContainer">
    <div class="postTabs">
        <div class="dateTab">
            <div class="month">@Model.Post.Date.ToString("MMM").ToUpper()</div>
            <div class="day">@Model.Post.Date.ToString("dd")</div>
        </div>
        <div class="commentsTab">
            <span>
                <img src="@Url.Content("~/Content/Images/Comments.png")" alt="Comments" />@Model.Post.Comments.Count()
            </span>
        </div>
    </div>
    @using (Html.BeginForm("UpdatePosts", "Home", FormMethod.Post, new { @id = "postForm", @class = "postContent" }))
    {
        <input type="hidden" name="id" value="@Model.Post.Id" />
        <label class="col-md-2">Date</label><input class="form-control" type="text" name="date" value="@Model.Post.Date" /><br />
        <label class="col-md-2">Title</label><input class="form-control" type="text" name="title" value="@Model.Post.Title" /><br />
        <label class="col-md-2">Tags</label><input class="form-control" type="text" name="tags" value="@Model.TagsList" /><br />
        <label class="col-md-2">Post</label><textarea class="form-control" name="body" rows="10" cols="80">@Model.Post.Body</textarea><br />
        <label class="col-md-2"></label><input class="btn btn-default" type="submit" name="submit" value="Submit" />
    }
    
</div>

